        <record model='ir.ui.view' id='dowfranchise_request_form'>
            <field name="name">dowfranchise.request.form</field>
            <field name="model">dowfranchise.request</field>
            <field name="arch" type="xml">
                <form id="mainform">
                    <header>
                        <button name="act_confirm_request" string="Confirm Request" attrs="{'invisible': [('stage_id', '!=', 'draft')]}" class="oe_highlight" groups="dowfranchise.group_dowfranchise_user"/>
                        <button name="act_send_email" string="Send Email" attrs="{'invisible': [('stage_id', '!=', 'ongoing')]}" groups="dowfranchise.group_dowfranchise_user"/>
                        <button name="act_print_request" string="Print" groups="dowfranchise.group_dowfranchise_user"/>
                        <button name="act_approve_request" string="Approve" attrs="{'invisible': [('stage_id', '!=', 'ongoing')]}" class="oe_highlight" groups="dowfranchise.group_dowfranchise_user"/>
                        <button name="act_decline_request" string="Decline" attrs="{'invisible': [('stage_id', '!=', 'ongoing')]}" class="oe_highlight" groups="dowfranchise.group_dowfranchise_user"/>
                        <field name="stage_id" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet id="mainsheet">
                        <group id="maingroup">
                            <h1 id="maintitle">
                                <field name="name" placeholder="Request Name..." class="oe_inline"/>
                            </h1>
                        </group>
                        <group id="approvalgroup" string="Approval Routing">
                            <field name="approval_ids">
                                <tree editable="bottom">
                                    <field name="group_id"/>
                                    <field name="approval_uid"/>
                                    <field name="approval_date"/>
                                    <field name="status_id"/>
                                    <field name="comment"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

