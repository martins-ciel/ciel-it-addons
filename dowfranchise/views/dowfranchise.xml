        <record model='ir.ui.view' id='dowfranchise_requesttermination_form'>
            <field name="name">dowfranchise.requesttermination.form</field>
            <field name="model">dowfranchise.requesttermination</field>
            <field name="inherit_id" ref="dowfranchise.dowfranchise_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <label string="Request Termination Form "/>
                </xpath>
                <!--
                <xpath expr="//group[@id='titlegroup']" position="after">
                    <group id="buttongroup">
                        <button class="oe_inline oe_stat_button" type="object" icon="fa-calendar">
                            <div>Meeting</div>
                        </button>
                    </group>
                </xpath>
                -->
                <xpath expr="//group[@id='maingroup']" position="after">
                    <group>
                        <group>
                            <field name="request_uid"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                        </group>
                    </group>
                    <group string="Main">
                        <group>
                            <field name="legal_name"/>
                            <field name="partner_name"/>
                            <field name="locationarea_id"/> 
                        </group>
                        <group>
                            <field name="businessline_ids" widget="many2many_tags"/>
                            <field name="franchisemanager_uid"/>
                            <field name="expected_termination_date"/>
                        </group>
                    </group>
                    <group string="Termination Reason">
                        <field name="reason_id"/>
                        <field name="reason_comment"/>
                    </group>
                    <group string="Proofs Attachaments">
                        <field name="proof_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
                <xpath expr="//group[@id='approvalgroup']" position="after">
                    <group string="Termination Meeting">
                        <field name="meeting_date"/>
                        <field name="attended_uids" widget="many2many_tags"/>
                        <field name="meeting_summary"/>
                    </group>
                    <group string="Legal Departament">
                        <field name="legal_comment"/>
                    </group>
                </xpath>
            </field>
        </record>

