        <record model='ir.ui.view' id='dowfranchise_requestbase_form'>
            <field name="name">dowfranchise.requestbase.form</field>
            <field name="model">dowfranchise.requestbase</field>
            <field name="arch" type="xml">
                <form string="Request Base">
                    <header>
                        <button name="act_confirm_request" string="Confirm Request" attrs="{'invisible': [('stage_id', '!=', 'draft')]}" class="oe_highlight" groups="dowfranchise.group_dowfranchise_user"/>
                        <button name="act_send_email" string="Send Email" attrs="{'invisible': [('stage_id', '!=', 'on going')]}" groups="dowfranchise.group_dowfranchise_user"/>
                        <button name="act_print_request" string="Print" groups="dowfranchise.group_dowfranchise_user"/>
                        <button name="act_approve_request" string="Approve" attrs="{'invisible': [('stage_id', '!=', 'on going')]}" class="oe_highlight" groups="dowfranchise.group_dowfranchise_user"/>
                        <button name="act_decline_request" string="Decline" attrs="{'invisible': [('stage_id', '!=', 'on going')]}" class="oe_highlight" groups="dowfranchise.group_dowfranchise_user"/>
                        <field name="stage_id" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet string="Request Base">
                        <h1>
                            <field name="name" placeholder="Request Base Name..." class="oe_inline"/>
                        </h1>
                        <group>
                            <field name="request_uid"/>
                            <field name="request_date"/>
                            <field name="locationarea_id"/>
                        </group>
                        <notebook>
                            <page string="Approvals">
                                <field name="approval_ids">
                                    <tree string="Approvals" editable="bottom">
                                        <field name="group_id"/>
                                        <field name="approval_uid"/>
                                        <field name="approval_date"/>
                                        <field name="status_id"/>
                                        <field name="comment"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

